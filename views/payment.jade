      | Payment Info
    p.error
    p.title
      | Name on Card
    input.input(type="text", name="produce-type", id="produce-type")
    p.title
      | Credit Card Number
    input.input(type="text", name="quantity", id="quantity")
    .combined
      .part
        p.title
          | Security Code
        input.input(type="text", name="quantity", id="quantity")
      .part
        p.title
          | Expiration
        input.input(type="text", name="quantity", id="quantity")
    p.title
      | Address Line 1
    input.input(type="text", name="quantity", id="quantity")
    p.title
      | Address Line 2
    input.input(type="text", name="quantity", id="quantity")
    p.title
      | City
    input.input(type="text", name="quantity", id="quantity")
    .combined
      .part
        p.title
          | State
        input.input(type="text", name="quantity", id="quantity")
      .part
        p.title
          | Zip Code
        input.input(type="text", name="quantity", id="quantity")
