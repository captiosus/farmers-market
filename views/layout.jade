doctype html
html(lang="en")
  head
    block always
      meta(name="viewport", content="width=device-width, initial-scale=1")
      link(href='https://fonts.googleapis.com/css?family=Open+Sans', rel='stylesheet', type='text/css')
      link(href="/public/css/font-awesome.min.css", rel="stylesheet")
      link(rel="icon", type="image/png", href="public/img/nutritradeslogo.png")
      script(src="public/bower/jquery/dist/jquery.min.js")
      meta(charset="utf-8")
    block head
  body
    block body
    #login
      a.exit(href="#", id="exit-login")
        | x
      p.error

      label(for="username")
        | Username
      input(type="text", name="username", id="username")
      label(for="password")
        | Password
      input(type="password", name="password", id="password")
      a.button(id="loginbutton")
        | Login
    #register
      a.exit(href="#", id="exit-register")
        | x
      p.error
        
      label(for="username")
        | Username
      input(type="email", name="username", id="username")
      label(for="email")
        | Email
      input(type="text", name="email", id="email")
      label(for="password")
        | Password
      input(type="password", name="password", id="password")
      label(for="confirm-password")
        | Confirm Password
      input(type="password", name="confirm-password", id="confirm-password")
      a.button(id="registerbutton")
        | Register
    #cover
  block endscript
  block alwaysend
    script(src="public/js/menu.js")
    script(src="public/js/login.js")
